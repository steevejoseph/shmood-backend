// followed this tut: https://www.youtube.com/watch?v=Yl6WARA3IhQ
{
  "source": {
    "include": ["./routes", "./middleware", "./models"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true
  }
}
